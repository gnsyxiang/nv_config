        ],
        "description": "create a include"
    },

    "xmain": {
        "prefix": ["xmain"],
        "body": [
            "int main(int argc, char *argv[])",
            "{",
                "\t$1",
                "\treturn 0;",
            "}"
        ],
        "description": "create a main"
    },
    "xpthreadcb": {
        "prefix": ["xpthreadcb"],
        "body": [
            "static void *_$1_loop_cb(void *args)",
            "{",
                "\t${2|_main_context_s *context = args;|}",
                "\t$3",
                "\treturn NULL;",
            "}"
        ],
        "description": "create pthread cb"
    },

    "func": {
        "prefix": ["func"],
        "body": [
            "${1|int,float,double,char,short,*|} $2()",
            "{",
                "\treturn $3;",
                "}"

        ],
        "description": "create a function return int"
    },

    "doc-header": {
        "prefix": ["doc-header"],
        "body": [
            "/**",
            "* @file ${TM_FILENAME}",
            "* @bref ${1}",
            "* @details ${2}",
            "* @date ${CURRENT_YEAR}/${CURRENT_MONTH}/${CURRENT_DATE}",
            "* @commit history:",
            "* \t v${3}: ${4}",
            "*/${0}"

        ],
        "description": "create a doc header"
    }
