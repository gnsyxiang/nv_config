{
    "xtypedef": {
        "prefix": ["xtypedef"],
        "body": [
            "typedef struct {",
            "\t${2|hy_s32_t is_exit;|}",
            "} $1;"
        ],
        "description": "create a typedef"
    },

    "xfor": {
        "prefix": ["xfor"],
        "body": [
            "for (hy_s32_t ${2|i|} = 0; ${2} < ${1}; ${2}++) {",
            "\t${3}",
            "}"
        ],
        "description": "create a for"
    },
    "xif": {
        "prefix": ["xif"],
        "body": [
            "if (${1}) {",
            "}"
        ],
        "description": "create a if"
    },

    "xloges": {
